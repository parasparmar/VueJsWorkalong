@{
    ViewData["Title"] = "Home Page";
}



<div class="text-center">
    <img :src="imgSrc" :title="imgTitle" :href="imgHdUrl" :alt="imgTitle" />
    <h1 class="display-4">{{imgTitle}}</h1>
    <p>{{imgDescription}}</p>
    <p>{{imgDate}}</p>
    <p>{{imgHdUrl}}</p>
    <p>{{imgMediaType}}</p>
    <p>{{imgServiceVersion}}</p>
</div>

table>thead>td*10



