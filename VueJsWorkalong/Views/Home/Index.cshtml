    <img src="..." class="card-img-top" alt="...">
    <div class="card-body">
        <h5 class="card-title">Card title</h5>
        <p class="card-text">Some quick example text to build on the card title and make up the bulk of the card's content.</p>
        <a href="#" class="btn btn-primary">Go somewhere</a>
    </div>
</div>

@section Scripts{
    <script type="text/javascript">
        const apiKey = "MKTeRhimZ3uiDIQWZF6824vWYhzwk2gva3lrqLIb";
        var url = "";

        var vm = new Vue({
            el: "#app",
            data: {
                imgSrc: '',
                imgHdUrl: '',
                imgTitle: '',
                imgDescription: '',
                imgDate: '',
                imgMediaType: '',
                imgServiceVersion: '',
                imgDescription: '',
                asteroids:[]
            },

            created: function () {
                // Run this function as soon as the page is created.
                this.fetchApod();
                //this.fetchAsteroids();
            },

            methods: {
                // Uses NASA's Astronomy API to fetch the Astronomy picture of the day.
                fetchApod: function () {
                    url = "https://api.nasa.gov/planetary/apod?api_key=" + apiKey;
                    axios.get(url)
                        .then(function (res) {
                            vm.imgSrc = res.data.url;
                            vm.imgTitle = res.data.title;
                            vm.imgDescription = res.data.explanation;
                            vm.imgHdUrl = res.data.hdurl;
                            vm.imgDate = res.data.date;
                            vm.imgMediaType = res.data.image;
                            vm.imgServiceVersion = res.data.service_version;
                        });
                },

                // Uses NASA's Astronomy API to fetch Near Earth objects like asteroids and Comets.
                fetchAsteroids: function () {
                    debugger;
                    url = "https://api.nasa.gov/neo/rest/v1/feed?start_date=START_DATE&end_date=END_DATE&api_key=" + apiKey;
                    url = url.replace("START_DATE", "2020-08-30");
                    url = url.replace("END_DATE", "2020-08-30");
                    
                    axios.get(url).then(function (res) {
                        console.log(res);
                        vm.asteroids = res.data.near_earth_objects;
                    });
                }

            }
        });
    </script>
}